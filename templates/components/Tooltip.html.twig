<div
    {{ attributes
        .defaults({
            class: cva({
                base: "tooltip",
                variants: {
                    theme: {
                        primary: "tooltip-primary",
                        secondary: "tooltip-secondary",
                        accent: "tooltip-accent",
                        info: "tooltip-info",
                        success: "tooltip-success",
                        warning: "tooltip-warning",
                        error: "tooltip-error",
                    },
                    placement: {
                        top: "tooltip-top",
                        bottom: "tooltip-bottom",
                        left: "tooltip-left",
                        right: "tooltip-right",
                    },
                },
            })
            .apply(
                { theme, placement },
            ),
            "data-tip": tip,
        })
    }}
>
    {% block content %}{% endblock %}
</div>
