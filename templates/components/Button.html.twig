<{{ as }}
    {{- attributes
        .defaults({
            class: html_cva(
                base: "btn",
                variants: {
                    color: {
                        accent: "btn-accent",
                        error: "btn-error",
                        info: "btn-info",
                        neutral: "btn-neutral",
                        primary: "btn-primary",
                        secondary: "btn-secondary",
                        success: "btn-success",
                        warning: "btn-warning",
                    },
                    shape: {
                        circle: "btn-circle",
                        square: "btn-square",
                    },
                    size: {
                        xs: "btn-xs",
                        sm: "btn-sm",
                        md: "btn-md",
                        lg: "btn-lg",
                        xl: "btn-xl",
                    },
                    variant: {
                        dash: "btn-dash",
                        ghost: "btn-ghost",
                        link: "btn-link",
                        outline: "btn-outline",
                        soft: "btn-soft",
                    },
                },
            ).apply(
                {
                    color,
                    shape,
                    size,
                    variant,
                },
                html_classes({
                    "btn-active": active,
                    "btn-block": block,
                    "btn-wide": wide,
                })
            ),
        })
    -}}
>
    {% block content %}{% if content is not null %}{{ content }}{% endif %}{% endblock %}
</{{ as }}>
