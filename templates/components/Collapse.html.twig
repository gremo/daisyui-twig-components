<div
    {{ attributes
        .defaults({
            class: cva({
                base: "collapse",
                variants: {
                    icon: {
                        arrow: "collapse-arrow",
                        plus: "collapse-plus",
                    },
                },
            }).apply(
                { icon },
            ),
            ...(autoClose ? { tabindex: 0 } : {}),
        })
    }}
>
    {% if not autoClose %}
        <input type="checkbox">
    {% endif %}
    <div {{ attributes.nested("title").defaults({ class: "collapse-title" }) }}>
        {% if title is not null %}
            {{ title }}
        {% else %}
            {% block title %}{% endblock %}
        {% endif %}
    </div>
    <div {{ attributes.nested("content").defaults({ class: "collapse-content" }) }}>
        {% block content %}{% endblock %}
    </div>
</div>
