<{{ this.as }}
    {{ attributes.defaults({
        class: cva({
            base: "dropdown",
            variants: {
                placement: {
                    top: "dropdown-top",
                    bottom: "dropdown-bottom",
                    left: "dropdown-left",
                    right: "dropdown-right",
                },
                align: {
                    end: "dropdown-end",
                },
            },
        }).apply(
            { placement, align },
            html_classes({
                "dropdown-hover": "hover" == trigger,
            }),
        ),
    }) }}
>
    {% block content %}{% endblock %}
</{{ this.as }}>
